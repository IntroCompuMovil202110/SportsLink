<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground">

  <SearchView
      android:id="@+id/actividadesSegunPreferenciasSearchView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"

      android:background="@drawable/white_roundcorner" />

  <Button
      android:id="@+id/crearButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/actividadesSegunPreferenciasSearchView"
      android:layout_marginStart="20dp"
      android:backgroundTint="@color/grayButtonBackground"
      android:background="@drawable/roundcorner"
      android:text="Crear"
      android:textAllCaps="false"
      android:textColor="@color/white"
      />

  <TextView
      android:id="@+id/actividadesTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/crearButton"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      android:text="Actividades segun tus preferencias"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold" />

  <ImageView
      android:id="@+id/imageView11"
      android:layout_width="380dp"
      android:layout_height="280dp"
      android:scaleType="fitXY"
      android:layout_marginTop="20dp"
      android:layout_centerHorizontal="true"
      android:layout_below="@id/actividadesTextView"

      app:srcCompat="@mipmap/ic_default_image_foreground" />


</RelativeLayout>