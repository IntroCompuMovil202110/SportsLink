<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controlador.CrearRutaEncuentro">

    <com.here.sdk.mapview.MapView
        android:id="@+id/map_view_ruta"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </com.here.sdk.mapview.MapView>

    <LinearLayout
        android:id="@+id/button_row_1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_row_2"
        app:layout_constraintTop_toBottomOf="@+id/button_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crear"
            android:onClick="clearMapButtonClicked" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>