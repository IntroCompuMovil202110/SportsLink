<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:TextViewandroid="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">





    <ImageButton
        android:id="@+id/perfilUsuario"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_weight="0.1"
        android:adjustViewBounds="true"

        TextViewandroid:srcCompat="@drawable/ic_suggestion" />

    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:layout_weight="0.7"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center|left"/>


    <ImageButton
        android:id="@+id/chatUsuario"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_weight="0.1"
        android:background="@color/blackBackground"
        TextViewandroid:srcCompat="@drawable/ic_chat3" />






</LinearLayout>