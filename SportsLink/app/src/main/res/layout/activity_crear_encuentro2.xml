<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground"
    tools:context=".controlador.CrearEncuentro2Activity">

  <TextView
      android:id="@+id/crearEncuentro2textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      android:text="Crear encuentro parte 2"
      android:textColor="@color/white"
      android:textSize="30sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/crearEncuentro2fechaTextViewTitulo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/crearEncuentro2textView"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="Fecha"
      android:textColor="@color/grayButtonBackground"
      android:textSize="20sp" />

  <EditText
      android:id="@+id/etPlannedDate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginTop="139dp"
      android:clickable="true"
      android:focusable="false"
      android:hint="report_planned_date"
      android:inputType="date"
      android:maxLines="1" />

  <TextView
      android:id="@+id/crearEncuentro2horaTextView"
      android:layout_width="99dp"
      android:layout_height="42dp"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="15dp"
      android:layout_marginTop="190dp"
      android:layout_marginEnd="297dp"
      android:text="Hora"
      android:textColor="@color/grayButtonBackground"
      android:textSize="20sp" />

  <TimePicker
      android:id="@+id/crearEncuentro2horaTimePicker"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginStart="0dp"
      android:layout_marginTop="237dp"
      android:background="@color/white"
      android:timePickerMode="spinner" />

  <TextView
      android:id="@+id/crearEncuentro2capacidadTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/crearEncuentro2horaTimePicker"
      android:layout_marginStart="20dp"
      android:layout_marginTop="50dp"
      android:text="Capacidad"
      android:textColor="@color/grayButtonBackground"
      android:textSize="20sp" />

  <Spinner
      android:id="@+id/crearEncuentro2capacidadSpinner"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/crearEncuentro2capacidadTextView"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:background="@color/white" />

  <Button
      android:id="@+id/crearEncuentro2atrasButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="5dp"
      android:background="@color/transparent"
      android:text="Atras"
      android:textAllCaps="false"
      android:textColor="@color/grayButtonBackground" />

  <Button
      android:id="@+id/crearEncuentro2siguienteButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="20dp"
      android:layout_marginBottom="5dp"
      android:background="@drawable/roundcorner"
      android:backgroundTint="@color/grayButtonBackground"
      android:text="Punto de encuentro"
      android:textAllCaps="false"
      android:textColor="@color/white" />

  <Button
      android:id="@+id/crearEncuentro2cancelarButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="5dp"
      android:background="@color/transparent"
      android:text="Cancelar"
      android:textAllCaps="false"
      android:textColor="@color/grayButtonBackground" />
</RelativeLayout>