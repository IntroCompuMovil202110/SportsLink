<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBackground"
    tools:context=".controlador.CrearEncuentro1Activity">





  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <TextView
          android:id="@+id/crearEncuentro1textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginTop="0dp"
          android:text="Crear encuentro parte 1"
          android:textColor="@color/white"
          android:textSize="30sp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/crearEncuentro1actividadTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/crearEncuentro1textView"
          android:layout_marginStart="20dp"
          android:layout_marginTop="50dp"
          android:text="Actividad"
          android:textColor="@color/grayButtonBackground"
          android:textSize="20sp" />

      <Spinner
          android:id="@+id/crearEncuentro1actividadSpinner"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/crearEncuentro1actividadTextView"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:background="@color/white" />

      <TextView
          android:id="@+id/crearEncuentro1nombreTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/crearEncuentro1actividadSpinner"
          android:layout_marginStart="20dp"
          android:layout_marginTop="100dp"
          android:text="Nombre"
          android:textColor="@color/grayButtonBackground"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/crearEncuentro1nombreEditText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/crearEncuentro1nombreTextView"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:backgroundTint="@color/white"
          android:inputType="text"
          android:textColor="@color/grayButtonBackground" />

      <TextView
          android:id="@+id/crearEncuentro1descripcionTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/crearEncuentro1nombreEditText"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:text="Descripción"
          android:textColor="@color/grayButtonBackground"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/crearEncuentro1descripcionEditText"
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:layout_below="@id/crearEncuentro1descripcionTextView"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="20dp"
          android:background="@drawable/white_roundcorner"
          android:backgroundTint="@color/white"
          android:hint="Descripción"
          android:importantForAutofill="no"
          android:inputType="textMultiLine"
          android:textColor="@color/black"
          android:textColorHint="@color/black" />

      <TextView
          android:id="@+id/crearEncuentro2fechaTextViewTitulo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/crearEncuentro1descripcionEditText"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:text="Fecha"
          android:textColor="@color/grayButtonBackground"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/etPlannedDate"
          android:layout_width="match_parent"
          android:layout_height="30dp"

          android:layout_below="@+id/crearEncuentro2fechaTextViewTitulo"
          android:layout_marginTop="10dp"
          android:clickable="true"
          android:focusable="false"
          android:hint="Introduce una fecha"
          android:inputType="date"
          android:maxLines="1"
          android:textColor="@color/black"
          android:background="@color/white"/>

      <TextView
          android:id="@+id/crearEncuentro2horaTextView"
          android:layout_width="99dp"
          android:layout_height="42dp"
          android:layout_alignParentStart="true"

          android:layout_alignParentEnd="true"
          android:layout_below="@+id/etPlannedDate"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:text="Hora"
          android:textColor="@color/grayButtonBackground"
          android:textSize="20sp" />

      <TimePicker
          android:id="@+id/crearEncuentro2horaTimePicker"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/crearEncuentro2horaTextView"
          android:layout_marginStart="0dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="20dp"
          android:background="@color/white"
          android:timePickerMode="spinner" />

      <Button
          android:id="@+id/continuar"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Continuar" />


    </LinearLayout>

  </ScrollView>



</RelativeLayout>